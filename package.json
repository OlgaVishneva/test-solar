{
  "name": "vite-template",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite --mode development",
    "build": "vite build",
    "build-local": "cross-env COMMAND=build-preview vite build",
    "preview": "vite preview",
    "lint": "stylelint **/*.scss --config stylelint.config.cjs",
    "format": "prettier --write src/js/**",
    "lint:css": "stylelint \"**/*.scss\"",
    "lint:css-fix": "stylelint \"**/*.scss\" --fix",
    "lint:js": "prettier --check \"**/*.js\"",
    "lint:js-fix": "prettier --write \"**/*.js\"",
    "lint-fix": "npm run lint:css-fix && npm run lint:js-fix"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "10.4.17",
    "bootstrap": "5.3.2",
    "cross-env": "7.0.3",
    "gh-pages": "^6.3.0",
    "glob": "10.3.10",
    "prettier": "^3.2.5",
    "sass": "1.70.0",
    "sharp": "0.33.2",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "vite": "^7.1.0",
    "vite-plugin-handlebars": "2.0.0",
    "vite-plugin-image-optimizer": "1.1.7",
    "vite-plugin-minify": "1.5.2"
  },
  "dependencies": {
    "chokidar": "3.5.3",
    "normalize.css": "8.0.1",
    "rollup": "^4.45.1",
    "swiper": "^8.4.5"
  },
  "version": "1.0.0",
  "main": "vite.config.js",
  "author": "",
  "license": "ISC",
  "description": ""
}
